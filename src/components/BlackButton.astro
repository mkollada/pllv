---
interface Props {
  text: string
  type?: 'button' | 'submit'
}

const { text, type = 'button' } = Astro.props
---

<button
  class="min-h-[44px] min-w-[120px] touch-manipulation bg-black px-5 py-3 font-semibold text-white shadow-md transition-colors hover:bg-gray-600 focus:outline-none focus:ring-offset-2 active:bg-blue-800 md:min-h-0 md:py-2"
  type={type}
>
  {text}
</button>
