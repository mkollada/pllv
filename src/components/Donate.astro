---
import text from '../data/text/porchlight-is.json'
import BlackButton from './BlackButton.astro'
---

<div class="flex w-full max-w-full flex-col items-center gap-3 px-2 md:gap-4 md:px-0 md:py-0">
  <div class="flex flex-col items-center">
    <img
      src="https://pihovfuuvvf4hivn.public.blob.vercel-storage.com/luka-above-1.jpg"
      alt="Luka Above"
      loading="lazy"
      decoding="async"
      class="w-full h-auto object-contain transition-transform duration-200 group-hover:scale-[1.02]"
    />
  </div>
  <div class="flex flex-col items-center py-2">
    <BlackButton text="Donate" />
  </div>
  <div class="flex flex-col items-center">
    <p class="max-w-full text-xs leading-relaxed md:text-sm">{text.paragraph2}</p>
  </div>
</div>
